<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Интернет-магазин</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <header>
        <span class="logo">Best Shop</span>
        <nav>
            <a href="/uslugi">Услуги</a>
            <a href="/home/Contacts">Контакты</a>
            <a href="/home/About">Про нас</a>
        </nav>
    </header>

    <main class="items">
        @RenderBody()
    </main>

    <button class="shop-cart-button"><i class="fas fa-shopping-cart"></i></button>

    <footer>Все права защищены &copy;</footer>
    @await RenderSectionAsync("Scripts", required: false)
